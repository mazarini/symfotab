{% if action in ['index', 'show'] %}
    <a class="btn btn-primary" href="{{ path('item_new',{'tableName': tableName}) }}" role="button">
        Create
    </a>
{% endif %}
{% if action in ['new', 'edit'] %}
    <button class="btn btn-primary">
        Save
    </button>
{% endif %}
{% if action in ['new', 'edit', 'show'] %}
    <a class="btn btn-primary" href="{{ path('item_index', { 'tableName': tableName }) }}" role="button">
        Back
    </a>
{% endif %}
{% if action in ['show'] %}
    <a class="btn btn-primary" href="{{ path('item_edit', {'tableName': tableName, 'id': id}) }}" role="button">
        edit
    </a>
{% endif %}
{% if action in ['edit'] %}
    <a class="btn btn-primary" href="{{ path('item_show', {'tableName': tableName, 'id': id}) }}" role="button">
        view
    </a>
{% endif %}
{% if action in ['edit','show'] %}
    <button class="btn btn-primary" onclick='getElementById("item_delete").submit()'>
        Delete
    </button>
{% endif %}
