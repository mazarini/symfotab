{% extends 'base.html.twig' %}

{% block main_top %}
    Table index
{% endblock %}

{% block main_content %}

    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    TableName
                </th>
                <th>
                    TableKey
                </th>
                <th>
                    TableData
                </th>
                <th>
                    CreatedAt
                </th>
                <th>
                    UpdatedBy
                </th>
                <th>
                    actions
                </th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>
                        {{ item.id }}
                    </td>
                    <td>
                        {{ item.tableName }}
                    </td>
                    <td>
                        {{ item.tableKey }}
                    </td>
                    <td>
                        {{ item.tableData ? item.tableData|json_encode : '' }}
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('item_show', {'id': item.id}) }}">
                            show
                        </a>
                        <a class="btn btn-primary btn-sm" href="{{ path('item_edit', {'id': item.id}) }}">
                            edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">
                        no records found
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% embed "@MazariniSymfoTab/item/_button.html.twig" with {'id': 0, 'action': 'index' } %}
    {% endembed %}

{% endblock %}
